page{
  background-color:#2b809d;
  height: 100%;
}
.container{
  height: 100%;
  display: flex;
  flex-flow: column;
}
.header{
  height: 120rpx;
  width: 100vw;
  background-color: rgb(135, 178, 235);
  overflow: hidden;
  position: relative;
  
}
.img{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: -20%;
}
.demo1{
  transform: rotate(0deg) scale(1) translate(75%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(75%,0%); 
}
.section{
  flex: 1;
  /* background-color: pink; */
  margin-bottom: 30rpx;
  overflow: hidden;
}
.returnSort {
   line-height: 80rpx;
   margin: 0 10rpx;
   color: #ccc;
   font-size: 26rpx;
}
.usermotto{
  height: 80rpx;
  border-radius: 50rpx;
  width: 500rpx;
  margin: 20rpx auto;
  background-color: gray;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: relative;


}
.usermotto_btn{
  width: 200rpx;
  height: 70rpx;
  text-align: center;
  color: #ccc;
  line-height: 70rpx;
}
.shadowType {
  color: #fff;
}
.usermotto_shadow{
   background-color: rgba(48, 138, 221, 0.7);
  border-radius: 30rpx;
  width: 200rpx;
  height: 70rpx;
  position: absolute;
  left: 6%;
}
.usermotto_shadows{
   background-color: rgba(48, 138, 221, 0.7);
  border-radius: 30rpx;
  width: 200rpx;
  height: 70rpx;
  position: absolute;
  right: 6%;
  color: #fff;
  z-index: 99;
}

